{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./dist",  // Carpeta donde se compilarán los archivos JS
    "target": "ES6",  // Define el estándar JS que quieres usar
    "esModuleInterop": true,  // Permite la importación de módulos sin la extensión .js
    "strict": true,  // Habilita la verificación estricta
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
, "src/index.ts"  ]
}
